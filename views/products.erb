<% @title = "Products - Price Tracker" %>

<div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Tracked Products</h1>
            <p class="text-gray-600">
                All of your products are listed here.
            </p>
        </div>
        <a href="/" class="text-blue-600 hover:text-blue-800 font-medium">
            ‚Üê Back to Dashboard
        </a>
    </div>


    <!-- Products List -->
    <% if @products && @products.any? %>
        <div class="grid gap-6">
            <% @products.each do |product| %>
                <div class="bg-white rounded-lg shadow p-6">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                <%= product[:title] %>
                            </h3>
                            <p class="text-sm text-gray-600 mb-4">
                                <%= shorten_url(product[:url]) %>
                            </p>
                            
                            <div class="flex items-center space-x-6">
                                <div>
                                    <span class="text-sm text-gray-500">Current Price</span>
                                    <p class="text-xl font-bold text-gray-900">$<%= product[:price] %></p>
                                </div>
                                
                                <% if product[:target_price] %>
                                <div>
                                    <span class="text-sm text-gray-500">Target Price</span>
                                    <p class="text-lg font-semibold text-blue-600">$<%= product[:target_price] %></p>
                                    <% if product[:price] && product[:target_price] %>
                                        <% if product[:price] <= product[:target_price] %>
                                            <span class="text-sm text-green-600 font-medium">Target reached!</span>
                                        <% else %>
                                            <span class="text-sm text-gray-600">$<%= (product[:price] - product[:target_price]).round(2) %> above target</span>
                                        <% end %>
                                    <% end %>
                                </div>
                                <% end %>
                                
                                <div>
                                    <span class="text-sm text-gray-500">Confidence</span>
                                    <p class="text-sm font-medium <%= product[:confidence] >= 80 ? 'text-green-600' : product[:confidence] >= 60 ? 'text-yellow-600' : 'text-red-600' %>">
                                        <%= product[:confidence] %>%
                                    </p>
                                </div>

                                <div>
                                    <span class="text-sm text-gray-500">Last Updated</span>
                                    <p class="text-sm text-gray-600">
                                        <%= Time.parse(product[:last_updated]).strftime('%b %d, %Y') %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="flex space-x-2">
                            <a href="/products/<%= product[:id] %>/refresh" class="text-green-600 hover:text-green-800 font-medium">
                                Refresh Price
                            </a>
                            <span class="text-gray-300">|</span>
                            <form method="POST" action="/products/<%= product[:id] %>/delete" class="inline" onsubmit="return confirm('Are you sure you want to delete this product? This will remove all price history.')">
                                <input type="hidden" name="csrf_token" value="<%= session[:csrf_token] %>">
                                <button type="submit" class="text-red-600 hover:text-red-800 font-medium bg-transparent border-none cursor-pointer">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
            <div class="mx-auto h-24 w-24 text-gray-400 mb-4">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No products yet</h3>
            <p class="text-gray-600 mb-6">Start tracking prices by adding your first product.</p>
        </div>
    <% end %>
</div>